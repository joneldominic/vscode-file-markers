// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "watch",
			"dependsOn": [
				"pnpm: watch:tsc",
				"pnpm: watch:esbuild"
			],
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"command": "pnpm run watch:esbuild",
			"group": "build",
			"problemMatcher": {
				"owner": "esbuild",
				"fileLocation": ["relative", "${workspaceFolder}"],
				"pattern": {
					"regexp": "âœ˜ \\[ERROR\\] (.*)\\n.*?(\\S+):(\\d+):(\\d+):",
					"message": 1,
					"file": 2,
					"line": 3,
					"column": 4
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "\\[watch\\] build started",
					"endsPattern": "\\[watch\\] build finished"
				}
			},
			"isBackground": true,
			"label": "pnpm: watch:esbuild",
			"presentation": {
				"group": "watch",
				"reveal": "never"
			}
		},
		{
			"type": "shell",
			"command": "pnpm run watch:tsc",
			"group": "build",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"label": "pnpm: watch:tsc",
			"presentation": {
				"group": "watch",
				"reveal": "never"
			}
		},
		{
			"type": "shell",
			"command": "pnpm run watch-tests",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": "build",
			"label": "pnpm: watch-tests"
		},
		{
			"label": "tasks: watch-tests",
			"dependsOn": [
				"watch",
				"pnpm: watch-tests"
			],
			"problemMatcher": []
		}
	]
}
